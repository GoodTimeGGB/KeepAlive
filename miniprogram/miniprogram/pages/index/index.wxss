.container {
  min-height: 100vh;
  width: 100%;
  max-width: 448px;
  margin: 0 auto;
  position: relative;
  background-color: var(--brand-dark);
}

/* 扫描线 */
.scan-line {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2px;
  background: linear-gradient(90deg, transparent, var(--brand-orange), transparent);
  opacity: 0.3;
  animation: scan 3s linear infinite;
  z-index: 1;
  pointer-events: none;
}

@keyframes scan {
  0% { transform: translateY(-100%); }
  100% { transform: translateY(200%); }
}

/* 顶部信息栏 */
.header {
  border-bottom: 2px solid var(--brand-surface);
  padding: 16px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.header-info {
  display: flex;
  align-items: center;
  gap: 12px;
}

.header-period {
  font-size: 12px;
  color: var(--brand-muted);
  font-family: 'Courier New', monospace;
  text-transform: uppercase;
}

.header-user {
  font-size: 14px;
  font-weight: 700;
  color: var(--brand-white);
}

.header-avatar {
  width: 40px;
  height: 40px;
  background-color: var(--brand-orange);
  border: 2px solid var(--brand-white);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
}

/* 主要内容 */
.main-content {
  padding: 16px;
  display: flex;
  flex-direction: column;
  gap: 24px;
}

/* 标题区域 */
.hero-section {
  border-left: 4px solid var(--brand-orange);
  padding-left: 16px;
}

.hero-title {
  display: block;
  font-size: 32px;
  font-weight: 900;
  color: var(--brand-white);
  line-height: 1;
  margin-bottom: 8px;
}

.hero-subtitle {
  display: block;
  font-size: 18px;
  color: var(--brand-muted);
  font-family: 'Courier New', monospace;
  border-bottom: 2px solid var(--brand-surface);
  padding-bottom: 8px;
}

/* 统计卡片 */
.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 12px;
}

.stat-card {
  background-color: var(--brand-surface);
  border: 2px solid var(--brand-muted);
  padding: 12px;
  display: flex;
  align-items: center;
  gap: 8px;
}

.stat-icon {
  font-size: 20px;
}

.stat-info {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.stat-label {
  font-size: 12px;
  color: var(--brand-muted);
  font-family: 'Courier New', monospace;
  text-transform: uppercase;
}

.stat-value {
  font-size: 20px;
  font-weight: 700;
  color: var(--brand-white);
  font-family: 'Courier New', monospace;
}

/* 进度环区域 */
.progress-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12px;
  padding: 16px 0;
}

.progress-hint {
  font-size: 12px;
  color: var(--brand-muted);
  font-family: 'Courier New', monospace;
  text-transform: uppercase;
  letter-spacing: 2px;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.btn-drink,
.btn-exercise {
  width: 100%;
  border: 2px solid var(--brand-white);
  padding: 16px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  transition: all 0.2s;
}

.btn-drink {
  background-color: var(--brand-orange);
}

.btn-exercise {
  background-color: var(--brand-surface);
  border-color: var(--brand-muted);
}

.btn-drink:active,
.btn-exercise:active {
  transform: translateX(4px) translateY(4px);
}

.btn-content {
  display: flex;
  align-items: center;
  gap: 12px;
}

.btn-icon {
  font-size: 24px;
}

.btn-text {
  font-size: 16px;
  font-weight: 700;
  color: var(--brand-white);
}

.btn-tag {
  background-color: var(--brand-dark);
  padding: 4px 8px;
  font-size: 12px;
  color: var(--brand-white);
  font-family: 'Courier New', monospace;
  border: 2px solid var(--brand-white);
}

.btn-arrow {
  font-size: 20px;
  color: var(--brand-muted);
}

/* 故障悬停效果 */
@keyframes glitch {
  0% { transform: translate(0); }
  20% { transform: translate(-2px, 2px); }
  40% { transform: translate(-2px, -2px); }
  60% { transform: translate(2px, 2px); }
  80% { transform: translate(2px, -2px); }
  100% { transform: translate(0); }
}

.glitch-hover:active {
  animation: glitch 0.2s cubic-bezier(0.25, 0.46, 0.45, 0.94) both infinite;
}
