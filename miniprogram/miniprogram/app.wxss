/* 全局样式 - Brutalism 设计风格 */
page {
  --brand-dark: #0D0D0D;
  --brand-gray: #1A1A1A;
  --brand-surface: #252525;
  --brand-orange: #FF6B35;
  --brand-blue: #4ECDC4;
  --brand-white: #E5E5E5;
  --brand-muted: #808080;
  --wechat-green: #07C160;
  
  background-color: var(--brand-dark);
  color: var(--brand-white);
  font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  font-size: 16px;
  line-height: 1.5;
}

/* 扫描线动画效果 */
.scan-line {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2px;
  background: linear-gradient(90deg, transparent, var(--brand-orange), transparent);
  opacity: 0.3;
  animation: scan 3s linear infinite;
}

@keyframes scan {
  0% { transform: translateY(-100%); }
  100% { transform: translateY(200%); }
}

/* 网格背景图案 */
.pattern-grid {
  background-image: linear-gradient(var(--brand-surface) 1px, transparent 1px),
                    linear-gradient(90deg, var(--brand-surface) 1px, transparent 1px);
  background-size: 20px 20px;
}

/* 故障悬停效果 */
.glitch-hover:active {
  animation: glitch 0.2s cubic-bezier(0.25, 0.46, 0.45, 0.94) both infinite;
}

@keyframes glitch {
  0% { transform: translate(0); }
  20% { transform: translate(-2px, 2px); }
  40% { transform: translate(-2px, -2px); }
  60% { transform: translate(2px, 2px); }
  80% { transform: translate(2px, -2px); }
  100% { transform: translate(0); }
}

/* 浮动动画 */
@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-8px); }
}

.animate-float {
  animation: float 3s ease-in-out infinite;
}

/* 边框脉冲动画 */
@keyframes pulse-border {
  0%, 100% { border-color: var(--brand-orange); }
  50% { border-color: var(--brand-blue); }
}

.animate-pulse-border {
  animation: pulse-border 2s ease-in-out infinite;
}

/* 工具类 */
.container {
  max-width: 448px;
  margin: 0 auto;
  width: 100%;
  min-height: 100vh;
  position: relative;
}

.flex {
  display: flex;
}

.flex-col {
  flex-direction: column;
}

.items-center {
  align-items: center;
}

.justify-center {
  justify-content: center;
}

.justify-between {
  justify-content: space-between;
}

.gap-2 {
  gap: 8px;
}

.gap-3 {
  gap: 12px;
}

.gap-4 {
  gap: 16px;
}

.p-4 {
  padding: 16px;
}

.text-center {
  text-align: center;
}

.font-bold {
  font-weight: 700;
}

.font-mono {
  font-family: 'Courier New', monospace;
}

.cursor-pointer {
  cursor: pointer;
}

/* 按钮基础样式 */
.btn-base {
  border: 2px solid var(--brand-white);
  transition: all duration-200;
  position: relative;
}

.btn-primary {
  background-color: var(--brand-orange);
}

.btn-secondary {
  background-color: var(--brand-surface);
  border-color: var(--brand-muted);
}

.btn-base:active {
  transform: translateX(4px) translateY(4px);
}
