.progress-ring-container {
  width: 160px;
  height: 160px;
  margin: 0 auto;
}

.progress-ring {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  box-shadow: 0 0 20px rgba(255, 107, 53, 0.3);
}

.progress-inner {
  width: 130px;
  height: 130px;
  background-color: var(--brand-surface);
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2px solid var(--brand-muted);
}

.progress-text {
  display: flex;
  align-items: baseline;
  gap: 4px;
}

.current-value {
  font-size: 48px;
  font-weight: 900;
  color: var(--brand-white);
  font-family: 'Courier New', monospace;
}

.divider {
  font-size: 32px;
  color: var(--brand-muted);
}

.total-value {
  font-size: 32px;
  color: var(--brand-muted);
  font-family: 'Courier New', monospace;
}

.progress-label {
  font-size: 10px;
  color: var(--brand-muted);
  text-transform: uppercase;
  letter-spacing: 2px;
  margin-top: 4px;
  font-family: 'Courier New', monospace;
}
